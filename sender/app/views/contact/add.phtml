<script language="javascript" type="text/javascript">
    

$(function(){
    $("#submit").click(function(){
        var name = $('#name').val();
        var mobile = $('#mobile').val();
        var email = $('#email').val();
        var type = $("#type").val();
        if(!name){
                $('#myModal>.modal-body>p').html('联系人姓名不能为空');
                $('#myModal').modal('show');
                return false;
        }
        if ($.trim(name) == "") {
