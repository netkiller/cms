//             $('#myModal').modal('show');
//            return false;
//        }
        
//        var setoff = $("#setoff").val();
        var name = $("#name").val();
        var description = $("#description").val();
        $.post('/contact/addHandle',{name:name,description:description,mobile:mobile,email:email,type:type},function(data){
            $('#myModal>.modal-body>p').html(data.msg);
            $('#myModal').modal('show');
            if(!data.status){
